@model DemoWebApp.Models.Rickism

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Term" class="control-label"></label>
        <input asp-for="Term" class="form-control" />
        <span asp-validation-for="Term" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Definition" class="control-label"></label>
        <input asp-for="Definition" class="form-control" />
        <span asp-validation-for="Definition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Usage" class="control-label"></label>
        <input asp-for="Usage" class="form-control" />
        <span asp-validation-for="Usage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
