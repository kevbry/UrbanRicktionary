@model IEnumerable<DemoWebApp.Models.Rickism>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-9">
        @foreach (var item in Model)
        {
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">@item.Term<span class="pull-right">@item.Created</span></h3>

                </div>
                <div class="panel-body">
                    <p>@item.Definition</p>
                    <blockquote>
                        <em>@item.Usage</em>
                    </blockquote>
                    <div class="pull-right">
                        <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                        - 
                        <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-3">
        <div class="panel panel-warning">
            <div class="panel panel-heading">
                <h3 class="panel-title">Create your own</h3>
            </div>
            <div class="panel-body">
                @Html.Partial("CreatePartial", new Rickism())
            </div>
        </div>
        
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>